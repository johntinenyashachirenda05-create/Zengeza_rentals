# Django Settings
DJANGO_SETTINGS_MODULE=zengeza_rentals.settings_production
DJANGO_SECRET_KEY=your-secure-secret-key-here-change-this

# Database Settings (PostgreSQL recommended for production)
DB_NAME=zengeza_rentals_prod
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

